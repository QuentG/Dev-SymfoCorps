{% set urlOffer = path('offers_show', { slug: offer.slug }) %}

<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h5 class="mb-0">{{ offer.title }}</h5>
                    <small><i class="fas fa-map-marker-alt mr-1"></i>{{ offer.location }}</small>
                </div>
                <ul>
                    <li>Entreprise : {{ offer.owner.companyName }}</li>
                    <li>Salaire : <strong>{{ offer.salary ?? '---' }}€ /an</strong></li>
                    <li>Type de contrat : <span class="badge badge-success">{{ offer.contractType }}</span></li>
                </ul>
                <small class="text-muted font-italic">Publiée le {{ offer.createdAt|date("m/d/Y") }}</small>
            </div>
            <div class="card-body">
                <a href="{{ urlOffer }}" class="btn btn-block btn-primary">En savoir plus</a>
            </div>
        </div>
    </div>
</div>